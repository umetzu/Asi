@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form method="post">
    <div class="row">
        <div class="col-8">
            <div class="row">
                <div class="col-3">
                    <div class="form-group">
                        <label asp-for="Filter.Name" class="control-label"></label>
                        <input type="text" asp-for="Filter.Name" class="form-control" />
                        <span asp-validation-for="Filter.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">
                        <label asp-for="Filter.FromDate" class="control-label"></label>
                        <input type="date" asp-for="Filter.FromDate" class="form-control" />
                        <span asp-validation-for="Filter.FromDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">
                        <label asp-for="Filter.FromDate" class="control-label"></label>
                        <input type="date" asp-for="Filter.ToDate" class="form-control" />
                        <span asp-validation-for="Filter.FromDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">
                        <label class="control-label"></label>
                        <input type="submit" value="Search" class="btn btn-primary form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="row mt-2">
    <div class="col-2">
        <p>
            <a asp-page="Create">Create New</a>
        </p>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contact[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact[0].BirthDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Contact) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @item.BirthDate?.ToString("yyyy-MM-dd")
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
